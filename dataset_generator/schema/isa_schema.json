{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "X12 ISA Segment",
  "description": "Schema for X12 ISA segment, which contains interchange control information.",
  "type": "object",
  "properties": {
    "authorization_information_qualifier": {
      "type": "string",
      "description": "Authorization Information Qualifier (e.g., 00 = No Authorization, 01 = Authorized, 02 = Not Authorized)",
      "enum": ["00", "01", "02"]
    },
    "authorization_information": {
      "type": "string",
      "description": "Authorization Information (e.g., blank or specific authorization code)",
      "minLength": 10,
      "maxLength": 10
    },
    "security_information_qualifier": {
      "type": "string",
      "description": "Security Information Qualifier (e.g., 00 = No Security, 01 = Password, 02 = Certificate)",
      "enum": ["00", "01", "02"]
    },
    "security_information": {
      "type": "string",
      "description": "Security Information (e.g., blank or specific security code)",
      "minLength": 10,
      "maxLength": 10
    },
    "interchange_sender_id_qualifier": {
      "type": "string",
      "description": "Interchange ID Qualifier (e.g., 01 = Duns, 02 = SCAC, 03 = UCC)",
      "enum": ["01", "02", "03"]
    },
    "interchange_sender_id":{
      "type":"string",
      "description":"Sender ID (e.g., Duns, SCAC, UCC)",
      "minLength":15,
      "maxLength":15
    },
    "interchange_receiver_id_qualifier": {
      "type": "string",
      "description": "Interchange ID Qualifier (e.g., 01 = Duns, 02 = SCAC, 03 = UCC)",
      "enum": ["01", "02", "03"]
    },
    "interchange_receiver_id": {
      "type": "string",
      "description": "Interchange ID (e.g., Duns, SCAC, UCC)",
      "minLength": 15,
      "maxLength": 15
    },
    "interchange_date": {
      "type": "string",
      "format": "date",
      "description": "Interchange Date (e.g., YYMMDD)",
      "pattern": "^\\d{2}(0[1-9]|1[0-2])(0[1-9]|[12][0-9]|3[01])$"
    },
    "interchange_time": {
      "type": "string",
      "format": "time",
      "description": "Interchange Time (e.g., HHMM)",
      "pattern": "^([01][0-9]|2[0-3])[0-5][0-9]$"
    },
    "repetition_separator": {
      "type": "string",
      "description": "Repetition Separator (e.g., ^)",
      "minLength": 1,
      "maxLength": 1
    },
    "interchange_control_version_number": {
      "type": "string",
      "description": "Interchange Control Version Number (e.g., 00401)",
      "minLength": 5,
      "maxLength": 5
    },
    "interchange_control_number": {
      "type": "string",
      "description": "Interchange Control Number (e.g., 000000001)",
      "minLength": 9,
      "maxLength": 9
    },
    "acknowledgment": {
      "type": "string",
      "description": "Acknowledgment (e.g., 1 = Acknowledged, 0 = Not Acknowledged)",
      "enum": ["0", "1"]
    },
    "usage_indicator": {
      "type": "string",
      "description": "Usage Indicator (e.g., I = Information, P = Production, T = Test)",
      "enum": ["I", "P", "T"]
    },
    "element_separator": {
      "type": "string",
      "description": "Element Separator (e.g., ~)",
      "minLength": 1,
      "maxLength": 1
    },
    "isa_segment": {
      "type": "string",
      "description": "ISA segment in the format ISA*00*          *00*          *ZZ*123456789012345*ZZ*987654321098765*YYMMDD*HHMM*^*00401*000000001*0*T*:~",
      "minLength": 1,
      "maxLength": 106
    }
  },
  "required": ["authorization_information_qualifier", "authorization_information",
               "security_information_qualifier", "security_information",
               "interchange_sender_id_qualifier", "interchange_sender_id",
               "interchange_receiver_id_qualifier", "interchange_receiver_id",
               "interchange_date", "interchange_time", "repetition_separator",
               "interchange_control_version_number", "interchange_control_number",
               "acknowledgment", "usage_indicator", "element_separator"]
}

